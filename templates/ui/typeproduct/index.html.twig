{% extends 'base.html.twig' %}
{% block body %}
    <h3><span class="glyphicon glyphicon-company"></span>Liste des types de produits</h3>
    <div id="pos">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th class="hidden-print"><input id="checkall" type="checkbox" value=""></th>
                    <th class="sortable"><a href="#" class="js-sort" data-order="desc">Code<span class="glyphicon glyphicon-sort pull-right"></span></a></th>
                    <th class="sortable"><a href="#" class="js-sort" data-order="desc">Designation<span class="glyphicon glyphicon-sort pull-right"></span></a></th>
                    <th class="sortable"><a href="#" class="js-sort" data-order="desc">Description<span class="glyphicon glyphicon-sort pull-right"></span></a></th>
                    <th class="hidden-print">Actions</th>
                </tr>
            </thead>
            <tbody id="dataContainer">
            {% for entity in entities %}
                <tr>
                    <td class="hidden-print"><input type="checkbox" name="entities[]" value="{{ entity.id }}"></td>
                    <td>{{ entity.code }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.description }}</td>
                    <td class="hidden-print">
                        <div class="text-center">
                            <a class="btn btn-primary btn-xs"  data-toggle="tooltip" data-placement="top" title="afficher" href="{{ path('typeproduct.show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search"></span></a>
                            <a class="btn btn-danger btn-xs"  data-toggle="tooltip" data-placement="top" title="modifier" href="{{ path('typeproduct.edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>
                            {% if entity.active %}
                                <span data-toggle="tooltip"  title="activé {{ entity.activateBy  is null ? '' :'par ' ~ entity.activateBy.username     ~ ' le '  ~ (entity.activateAt| date('d/m/Y H:i:s') )}}" class="glyphicon glyphicon-thumbs-up"></span>
                            {% else %}
                                <span data-toggle="tooltip"  title="désactivé {{ entity.activateBy  is null ? '' :'par ' ~ entity.activateBy.username     ~ ' le '  ~ (entity.activateAt| date('d/m/Y H:i:s') )}} " class="glyphicon glyphicon-thumbs-down"></span>
                            {% endif %}
                            {% if entity.valid %}
                                <span data-toggle="tooltip" title="validé {{ entity.validateBy  is null ? '' :'par ' ~ entity.validateBy.username     ~ ' le '  ~ (entity.validateAt| date('d/m/Y H:i:s') )}}" class="glyphicon glyphicon-ok-circle"></span>
                            {% else %}
                                <span data-toggle="tooltip"  title="invalidé {{ entity.validateBy  is null ? '' :'par ' ~ entity.validateBy.username     ~ ' le '  ~ (entity.validateAt| date('d/m/Y H:i:s') )}} " class="glyphicon glyphicon-minus-sign"></span>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
